<div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
    <div class="card card-stats">
      <!-- Card body -->
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h5 class="card-title text-uppercase mb-3"><%= meta.title %></h5>
            <span class="h1 font-weight-bold mb-0 card-value"
            style="font-size: 1.5rem !important;"
            ><%= meta.value %></span>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape text-white rounded-circle shadow"
            style="background-color: rgb(114, 20, 206);">
              <i class="<%= meta.icon %>"></i>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0 text-sm">
          <span class="text-nowrap">Since last month</span>
        </p>
      </div>
    </div>
  </div>